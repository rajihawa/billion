{
    "name": "billionjs",
    "version": "0.0.2",
    "description": "The smallest and fastest frontend framework",
    "scripts": {
        "build": "tsc --build",
        "clean": "tsc --build --clean",
        "watch": "tsc --build --watch",
        "lint": "eslint src/** --quiet --fix",
        "format": "prettier --write src --parser typescript",
        "prepare": "husky install"
    },
    "author": {
        "name": "Raji Hawa",
        "email": "rajihawa@protonmail.com",
        "url": "https://rajihawa.com"
    },
    "main": "dist/billion.js",
    "module": "dist/billion.esm.js",
    "browser": "dist/billion.min.js",
    "types": "dist/billion.d.ts",
    "exports": {
        "browser": "./dist/billion.min.js",
        "require": "./dist/billion.cjs.js",
        "import": "./dist/billion.esm.js"
    },
    "keywords": [
        "billion",
        "frontend",
        "library",
        "framework",
        "web",
        "ui",
        "browser"
    ],
    "contributors": [
        "Raji Hawa <rajihawa@protonmail.com>"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rajihawa/billion"
    },
    "homepage": "https://github.com/rajihawa/billion",
    "bugs": {
        "url": "https://github.com/rajihawa/billion/issues"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "dependencies": {
        "csstype": "^3.0.8",
        "million": "^0.1.0"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.27.0",
        "@typescript-eslint/parser": "^4.27.0",
        "eslint": "^7.29.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^6.0.0",
        "prettier": "^2.3.1",
        "typescript": "^4.3.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn format && yarn lint"
        }
    }
}
